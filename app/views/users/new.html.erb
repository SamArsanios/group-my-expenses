<% provide(:title, "Signup") %>

<div class="card my-3 text-center">
  <div class="card-body px-5">
    <%= form_with model: @user, local: true do |form| %>
      <div class="md-form mb-3">
        <%= form.text_field :name, class: 'form-control', placeholder: 'Name'%>
      </div>
      <div class="custom-file mb-3">
        <%= form.file_field :avatar, class: 'custom-file-input', direct_upload: true, accept: "image/jpeg, image/gif, image/png" %>
        <%= form.label :avatar, class: 'custom-file-label' %>
      </div>
      <%= form.submit 'Signup', class: 'btn btn-primary p-2 m-3' %>
    <% end %>
  </div>
</div>