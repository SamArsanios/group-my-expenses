<% provide(:title, "New Group") %>
<%= render 'layouts/header'%>
<div class="card my-3 text-center">
  <div class="card-body px-5">
    <%= form_with model: @group, local: true do |form| %>
      <div class="md-form my-3">
        <%= form.text_field :name, class: 'form-control', placeholder: 'Name'%>
      </div>
      <div class="custom-file my-3">
        <%= form.file_field :icon, class: 'custom-file-input', direct_upload: true,accept: "image/jpeg, image/gif, image/png" %>
        <%= form.label :icon, class: 'custom-file-label' %>
      </div>
      <%= form.submit 'Add Group', class: 'btn btn-primary mt-3 px-5' %>
    <% end %>
  </div>
</div>