<% provide(:title, "New Expense") %>
<%= render 'layouts/header'%>
<div class="card my-3 text-center">
  <div class="card-body px-5">
    <%= form_with model: @expense, local: true do |form| %>
      <div class="md-form my-3">
        <%= form.text_field :name, class: 'form-control', placeholder: 'Name'%>
      </div>
      <div class="md-form my-3">
        <%= form.number_field :amount, class: 'form-control', placeholder: 'Amount'%>
      </div>
      <div class="input-group my-3">
        <div class="input-group-prepend">
          <%= form.label :group_id, class: 'input-group-text' %>
        </div>
        <%= form.collection_select(:group_id, Group.all, :id, :name, {include_blank: true}, {class: 'custom-select'}) %>
      </div>

       <div class="input-group my-3">
        <div class="input-group-prepend">
          <%= form.label :group_id, class: 'input-group-text' %>
        </div>
        <script type="text/javascript">
              document.querySelector('#expense_group_id').multiselect();
        </script> 
      <!--  <%= form.collection_select(:group_id, Group.all, :id, :name, {:multiple=> true}) %> -->
        <%= form.select :group, options_from_collection_for_select(Group.all, 'id', 'name'), { :multiple => true }%>
      </div>
      
      <%= form.submit 'Submit Expense', class: 'btn btn-primary mt-3 px-5' %>
    <% end %>
  </div>
</div>
